                    {% endif %}
                    
                    <div class="post-content">
                        <div class="post-meta">
                            {% if post.category %}
                            <span class="category-badge">{{ post.category.name }}</span>
                            {% endif %}
                            {% if post.published_at %}
                            <span class="post-date">{{ post.published_at.strftime("%b %d, %Y") }}</span>
                            {% endif %}
                            <div class="post-stats">
                                <span>{{ post.view_count }} views</span>
                                <span>{{ post.comments | length }} comments</span>
                            </div>
                        </div>

                        <h2 class="post-title">{{ post.title }}</h2>

                        {% if post.excerpt %}
                        <p class="post-excerpt">{{ post.excerpt }}</p>
                        {% endif %}

                        {% if post.tags %}
                        <div class="post-tags">
                            {% for tag in post.tags %}
                            <span class="tag">#{{ tag.name }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}

                        <div class="post-footer">
                            <div class="author-info">
                                <div class="author-avatar">
                                    {% if post.author and post.author.avatar_url %}
                                    <img src="{{ post.author.avatar_url }}" alt="{{ post.author.username }}">
                                    {% else %}
                                    {{ post.author.username[0]|upper if post.author else "?" }}
                                    {% endif %}
                                </div>
                                <div class="author-details">
                                    <span class="author-name">{{ post.author.full_name or post.author.username if post.author else "Unknown author" }}</span>
                                    {% if post.author and post.author.bio %}
                                    <span class="author-bio">{{ post.author.bio }}</span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="post-actions">
                                <a href="/post/{{ post.id }}" class="btn btn-primary">Read article</a>
                                {% if is_authenticated and post.author and post.author.id == user_id %}
                                <a href="/post/{{ post.id }}/edit" class="btn btn-secondary">Edit</a>
                                {% endif %}
